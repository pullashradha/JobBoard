<head>
  <link rel="stylesheet" href="/Content/css/bootstrap.min.css" type="text/css">
  <link rel="stylesheet" href="/Content/css/forms.css" type="text/css">
  <script src="http://code.jquery.com/jquery.js"></script>
  <script type="text/javascript" src="/Content/js/bootstrap.min.js"></script>
</head>
<body>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <ul class="nav navbar-nav navbar-right">
        <li class="active"><a href="/">Home<span class="sr-only">(current)</span></a></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">View<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="/jobs">Jobs</a></li>
            <li><a href="/categories">Categories</a></li>
            <li><a href="/companies">Companies</a></li>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Account<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="/accounts/new">Create Account</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="/login">Login</a></li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
  <div class="jumbotron">
    <h1>Create a New Account</h1>
    <form class="form-group" action="/accounts" method="post">
      <div class="row">
        <h2 class="col-xs-6">First Name<input required type="text" name="account-first-name" class="form-control"></h2>
        <h2 class="col-xs-6">Last Name<input required type="text" name="account-last-name" class="form-control"></h2>
      </div>
      <div class="row">
        <h2 class="col-xs-6">Email<input required type="text" name="account-email" class="form-control"></h2>
        <h2 class="col-xs-6">Phone<input required type="text" name="account-phone" class="form-control"></h2>
      </div>
      <h2>Education
        <select required class="form-control" name="account-education">
          <option value="1">High School Degree</option>
          <option value="2">Some College</option>
          <option value="3">Associate's Degree</option>
          <option value="4">Bachelor's Degree</option>
          <option value="5">Master's Degree</option>
          <option value="6">Ph.D</option>
        </select>
      </h2>
      <h2>Resume<textarea required rows="5" cols="30" type="text" name="account-resume" class="form-control"></textarea></h2>
      <h2>Username<input required type="text" name="account-username" class="form-control"></h2>
      <button type="btn" class="btn btn-success">Create Account</button>
    </form>
  </div>
</body>
