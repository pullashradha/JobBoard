<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/Content/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="/Content/css/lists.css" type="text/css">
    <script src="http://code.jquery.com/jquery.js"></script>
    <script type="text/javascript" src="/Content/js/bootstrap.min.js"></script>
    <title>@Model["keyword"]</title>
  </head>
  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <ul class="nav navbar-nav navbar-right">
          <li class="active"><a href="/">Home<span class="sr-only">(current)</span></a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">View<span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="/jobs">Jobs</a></li>
              <li><a href="/categories">Categories</a></li>
              <li><a href="/companies">Companies</a></li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Account<span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="/accounts/new">Create Account</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="/login">Login</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </nav>
    <div class="jumbotron">
      <h1>@Model["keyword"]</h1>
      @{
        double categoryFraction = (double) Model["categoryMatchedJobs"].Count/Model["categoryJobs"].Count;
        double companyFraction = (double) Model["companyMatchedJobs"].Count/Model["companyJobs"].Count;
      }
      <p>
        The word @Model["keyword"] appears in @Model["categoryMatchedJobs"].Count of @Model["categoryJobs"].Count job postings in this category
      </p>
      <p>
        The word @Model["keyword"] appears in @Model["companyMatchedJobs"].Count of @Model["companyJobs"].Count job postings in this company
      </p>
    </div>
  </body>
</html>
