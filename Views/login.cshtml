<head>
  <link rel="stylesheet" href="/Content/css/bootstrap.min.css" type="text/css">
  <link href="//netdna.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/Content/css/styles.css" type="text/css">
  <script src="http://code.jquery.com/jquery.js"></script>
  <script type="text/javascript" src="/Content/js/bootstrap.min.js"></script>
  <title>Epicodus Job Board</title>
</head>
<body>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <ul class="nav navbar-nav navbar-right">
        <li class="active"><a href="/">Home<span class="sr-only">(current)</span></a></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Account<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="/accounts/new">Create Account</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="/login">Select your Profile</a></li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
  <div class="jumbotron login-jumbotron">
    <span class="glyphicon glyphicon-user"></span>
    <form action="/login" method="post">
      <select class="form-control" name="username">
        @foreach (var account in Model)
        {
          <option value = @account.GetId()>@account.GetUsername()</option>
        }
      </select>
      <button type="submit" class="btn btn-success">Login</button>
    </form>
  </div>
</body>
